{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es3",
    "jsx": "react",
    "jsxFactory": "Preact.h",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "paths": {
      "#preact": ["src/preact.ts"],
      "#components": ["src/components/index.ts"],
      "#redux/*": ["src/redux/*"]
    }
  },
  "exclude": ["node_modules", "dist", "server.js"]
}
